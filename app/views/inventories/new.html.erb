<h1>Choose Your Inventory</h1>

<%= form_for @inventory, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
<div class="form-group">
  <%= f.label :amount, "Amount" %>
  <%= f.number_field :amount, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :armor_id, "Armor" %>
  <%= f.collection_select :armor_id, Armor.order(:name), :id, :name %>
</div>
<div class="form-group">
  <%= f.label :weapon_id, "Weapon" %>
  <%= f.collection_select :weapon_id, Weapon.order(:name), :id, :name %>
</div>
<div class="form-group">
  <%= f.label :spell_id, "Spell" %>
  <%= f.collection_select :spell_id, Spell.order(:name), :id, :name %>
</div>
<div class="form-group">
  <%= f.label :consumable_id, "Consumable" %>
  <%= f.collection_select :consumable_id, Consumable.order(:name), :id, :name %>
</div>

<%= f.hidden_field :user_id, value: session[:user_id] %>
<%= f.hidden_field :player_id, value: params[:player_id] %>

<%= f.submit class: 'btn btn-success' %>
<% end %>
